<section class="container-fluid">
  
  <div class="row">
    <div class="col-sm-10">
      <div class="row">
        <h1>Chat room</h1>
      </div>
      
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div  id="messages">
            <%= render @messages %>            
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <%= form_tag class: "navbar-form navbar-left search-form" do %>
            <div class="form-group">
              <%#= label_tag "Say Something:", nil, {class: "control-label"} %>
              <%= text_area_tag :chat_field, nil, {placeholder: 'Start Chat', class: "form-control text_field noresize", rows: 4}  %>
            </div>  
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-sm-2" id="online_users">
      <h2>Users</h2>
      <div class="online">
        <!-- Users go here -->
      </div>
    </div>
  </div>
  
  
  
  

  

</section>

